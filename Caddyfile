# Root domain â†’ redirect to dashboard
keyway.local {
	tls /etc/certs/local.pem /etc/certs/local-key.pem

	handle {
		redir https://app.keyway.local{uri} permanent
	}
}

# Dashboard app (authenticated)
app.keyway.local {
	tls /etc/certs/local.pem /etc/certs/local-key.pem

	handle {
		reverse_proxy dashboard:3000
	}
}

# API
api.keyway.local {
	tls /etc/certs/local.pem /etc/certs/local-key.pem

	handle {
		reverse_proxy backend:8080
	}
}
